{
  "type": "object",
  "title": "simple_photo",
  "properties": {
    "tab_title": {
      "type": "string",
      "options": {
        "hidden": true
      },
      "template": "{{title}}",
      "watch": {
        "title": "widget.___simple_photo___"
      }
    },
    "___simple_photo___": {
      "type": "string",
      "options": {
        "hidden": true
      },
      "default": "simple_photo"
    },
    "simple_photo-preview": {
      "title": "Example:",
      "type": "string",
      "format": "hidden",
      "default": "/frontend/web/js/app/widgets/simple_photo/img/preview.jpg",
      "links": [
        {
          "href": "{{self}}",
          "mediaType": "image"
        }
      ]
    },
    "image": {
      "type": "string",
      "format": "url",
      "title": "simple photo",
      "options": {
        "upload": true
      },
      "links": [
        {
          "href": "{{self}}",
          "rel": "View file"
        }
      ]
    },
    "alt": {
      "type": "string",
      "title": "alt",
      "default": "simple photo"
    }
  }
}