{
    "type": "object",
    "title": "News part",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___articles-part___"
            }
        },
        "___articles-part___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Articles part"
        },
        "articles-part-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/articles-part/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "title": {
            "type": "string",
            "title": "Title.",
            "default": "НОВИНИ RENAULT"
        },
        "all_news_text": {
            "type": "string",
            "title": "All news text.",
            "default": "ВСІ НОВИНИ RENAULT"
        },
        "read_more": {
            "type": "string",
            "title": "Read more text",
            "default": "ЧИТАТИ ДАЛІ"
        },
        "order_by": {
            "type": "string",
            "title": "Order by filed.",
            "enum": [
                "id",
                "weight",
                "created_at",
                "updated_at"
            ],
            "options": {
                "enum_titles": ["Id", "Weight", "Created at", "Updated at"]
            },
            "default": "id"
        },
        "sort_order": {
            "type": "string",
            "title": "Sort order.",
            "enum": [
                "asc",
                "desc"
            ],
            "options": {
                "enum_titles": ["asc", "desc"]
            },
            "default": "desc"
        },
        "count": {
            "type": "string",
            "title": "News count.",
            "default": "3"
        }
    }
}