{
    "type": "object",
    "title": "Image slider revolution",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___image-slider-revolution___"
            }
        },
        "___image-slider-revolution___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Image slider revolution"
        },
        "image-slider-revolution-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/image-slider-revolution/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "items": {
            "type": "array",            
            "title": "Images for slider.",
            "options": {
                "collapsed": true
            },
            "items": {
                "type": "object",
                "title": "image",
                "options": {
                    "collapsed": true
                },
                "properties": {
                    "title": {
                        "type": "string",
                        "title": "Title.",
                        "default": "Lorem ipsum dolor sit amet."
                    },
                    "img_src": {
                        "type": "string",
                        "format": "url",
                        "title": "Some image.",
                        "options": {
                            "upload": true
                        },
                        "links": [
                            {
                                "href": "{{self}}",
                                "rel": "View file"
                            }
                        ]
                    },
                  "header-1":{
                    "type": "string",
                    "title": "header-1",
                    "default": "ALL-NEW<br>KADJAR"
                  },
                  "header-2":{
                    "type": "string",
                    "title": "header-2",
                    "default": "Dare to live"
                  },
                  "header-3":{
                    "type": "string",
                    "title": "header-3",
                    "default": "With Â£5,060 deposit contribution."
                  },
                  "button-1":{
                    "type": "string",
                    "title": "button-1",
                    "default": "Explore KADJAR"
                  },
                  "urlButton-1":{
                    "type": "string",
                    "title": "urlButton-1",
                    "default": "#"
                  },
                  "button-2":{
                    "type": "string",
                    "title": "button-2",
                    "default": "Register your interest"
                  },
                  "urlButton-2":{
                    "type": "string",
                    "title": "urlbutton-2",
                    "default": "#"
                  }
                }
            }
        }
    }
}