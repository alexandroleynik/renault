          },
          "header-1": {
            "type": "string",
            "title": "header-1",
            "default": "ALL-NEW<br>KADJAR"
          },
          "header-2": {
            "type": "string",
            "title": "header-2",
            "default": "Dare to live"
          },
          "header-3": {
            "type": "string",
            "title": "header-3",
