{
    "type": "object",
    "title": "add image",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___test___"
            }
        },
        "___test___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "add image"
        },
        "test-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/head-video/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },

        "image": {
            "type": "string",
            "format": "url",
            "title": "Some image.",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        },
        "title": {
            "type": "string",
            "title": "Title",
            "default": "Lorem ipsum dolor sit amet"
        }
    }

}