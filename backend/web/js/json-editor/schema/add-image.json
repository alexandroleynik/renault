{
    "type": "object",
    "title": "add-image",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___add-image___"
            }
        },
        "___add-image___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "add-image"
        },
        "add-image-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/add-image/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },

        "image": {
            "type": "string",
            "format": "url",
            "title": "Some image.",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        },
        "add-image-title": {
            "type": "string",
            "title": "Title",
            "default": "Lorem ipsum dolor sit amet"
        }
    }

}