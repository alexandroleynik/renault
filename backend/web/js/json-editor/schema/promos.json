{
    "type": "object",
    "title": "Promos list",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___promos___"
            }
        },
        "___promos___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "promos"
        },
        "promos-preview": {
            "title": "Example:",
            "type": "string",
            "propertyOrder": 10,
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/promos/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "t": {
            "type": "array",
            "format": "table",
            "title": "Translations",
            "uniqueItems": true,
            "options": {
                "collapsed": true
            },
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string",
                        "options": {
                            "input_width": "300px"
                        }
                    },
                    "value": {
                        "type": "string",
                        "options": {
                            "input_width": "400px"
                        }
                    }
                }
            }
        },
        "order_by": {
            "type": "string",
            "propertyOrder": 16,
            "title": "Order by filed.",
            "enum": [
                "id",
                "weight",
                "created_at",
                "updated_at"
            ],
            "options": {
                "enum_titles": ["Id", "Weight", "Created at", "Updated at"]
            },
            "default": "id"
        },
        "sort_order": {
            "type": "string",
            "propertyOrder": 17,
            "title": "Sort order.",
            "enum": [
                "asc",
                "desc"
            ],
            "options": {
                "enum_titles": ["asc", "desc"]
            },
            "default": "desc"
        },
        "count": {
            "type": "string",
            "propertyOrder": 18,
            "title": "Promos count.",
            "default": "20"
        }
    }
}