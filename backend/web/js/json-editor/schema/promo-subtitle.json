{
    "type": "object",
    "title": "Subtitle",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___promo-subtitle___"
            }
        },
        "___promo-subtitle___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Subtitle"
        },
        "promo-subtitle-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/promo-subtitle/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },        
        "subtitle": {
            "type": "string",
            "title": "Subtitle",
            "default": "Lorem ipsum dolor sit amet"
        }
    }

}