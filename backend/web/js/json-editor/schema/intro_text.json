{
  "type": "object",
  "title": "intro_text",
  "properties": {
    "tab_title": {
      "type": "string",
      "options": {
        "hidden": true
      },
      "template": "{{title}}",
      "watch": {
        "title": "widget.___intro_text___"
      }
    },
    "___intro_text___": {
      "type": "string",
      "options": {
        "hidden": true
      },
      "default": "intro_text"
    },
    "intro_text-preview": {
      "title": "Example:",
      "type": "string",
      "format": "hidden",
      "default": "/frontend/web/js/app/widgets/intro_text/img/preview.jpg",
      "links": [
        {
          "href": "{{self}}",
          "mediaType": "image"
        }
      ]
    },



    "title": {
      "type": "string",
      "title": "Title",
      "default": "Внешний дизайн"
    },
    "text": {
      "type": "string",
      "title": "text",
      "default": "Обновленный дизайн Renault LOGAN удивит вас своей простотой и элегантностью. Классические формы седана, четкие горизонтальные линии и ярко выделенные колесные арки создают современный и динамичный образ, открывая новую эру дизайна в своем сегменте."
    }
  }
}