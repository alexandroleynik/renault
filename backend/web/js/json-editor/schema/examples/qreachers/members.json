{
    "type": "object",
    "title": "Members",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___members___"
            }
        },
        "___members___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Members"
        },
        "members-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/members/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "title": {
            "type": "string",
            "title": "Title",
            "default": "default title"
        },
        "members": {
            "type": "array",
            "uniqueItems": true,
            "format": "select",
            "$ref": "/member/enum"
        }
    }
}