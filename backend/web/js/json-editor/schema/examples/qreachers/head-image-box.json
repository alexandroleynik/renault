{
    "type": "object",
    "title": "Head image box",   
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___head-image-box___"
            }
        },
        "___head-image-box___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Image"
        },
        "head-image-box-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/head-image-box/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "img_src": {
            "type": "string",
            "format": "url",
            "title": "Some image.",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        },
        "title": {
            "type": "string",
            "title": "Title image.",
            "default": "Lorem ipsum dolor sit amet"
        }
    }
}