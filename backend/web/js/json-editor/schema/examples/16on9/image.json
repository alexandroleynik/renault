{
    "type": "object",
    "title": "Image",   
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___image___"
            }
        },
        "___image___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Image"
        },
        "image-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/image/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "img_src": {
            "type": "string",
            "format": "url",
            "title": "Some image.",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        }
    }
}