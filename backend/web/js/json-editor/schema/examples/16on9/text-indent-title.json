{
    "type": "object",
    "title": "Text indent with title",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___text-indent-title___"
            }
        },
        "___text-indent-title___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Text indent with title"
        },
        "text-indent-title-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/text-indent-title/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "title": {
            "type": "string",
            "title": "Title.",
            "default": "Default title."
        },
        "text": {
            "type": "string",
            "format": "html",
            "options": {
                "wysiwyg": true
            },
            "title": "Text.",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing."
        }
    }
}