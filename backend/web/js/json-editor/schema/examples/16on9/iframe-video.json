{
    "type": "object",
    "title": "External video",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___iframe-video___"
            }
        },
        "___iframe-video___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Iframe video"
        },
        "iframe-video-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/iframe-video/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "iframe_src": {
            "type": "string",
            "title": "External video url.",
            "default": "https://player.vimeo.com/video/29017040?title=0&byline=0&portrait=0"
        }
    }
}