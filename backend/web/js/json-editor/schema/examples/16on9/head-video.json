{
    "type": "object",
    "title": "Head video",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___head-video___"
            }
        },
        "___head-video___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Head video"
        },
        "head-video-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/head-video/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "text": {
            "type": "string",
            "title": "Text above video.",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing."
        },
        "href": {
            "type": "string",
            "title": "Url to external site.",
            "default": "https://vimeo.com/42784827"
        },
        "iframe_src": {
            "type": "string",
            "title": "Iframe src ...",
            "default": "https://player.vimeo.com/video/29017040"
        },
        "video_src": {
            "type": "string",
            "title": "Video if need.",
            "format": "url",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        },
        "img_src": {
            "type": "string",
            "title": "Image",
            "format": "url",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        },
        "share_buttons": {
            "type": "string",
            "title": "Show share buttons?",
            "enum": [
                "",
                "1"
            ],
            "options": {
                "enum_titles": ["No", "Yes"]
            },
            "default": ""
        },
        "published_at": {
            "type": "string",
            "title": "Show publish date?",
            "enum": [
                "",
                "1"
            ],
            "options": {
                "enum_titles": ["No", "Yes"]
            },
            "default": ""
        }

    }

}